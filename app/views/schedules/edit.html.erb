<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <div class="forms-container">
        <%= form_for @schedule, url: schedule_path do |f| %>
          <div class="form-group field">
            Date: <%= f.text_field :date, required: true, class: "datepicker" %>
          </div>
          <div class="form-group field">
            City: <%= f.text_field :city, required: true %>
          </div>
          <div class="form-group field">
            State : <%= f.text_field :state, required: true %>
          </div>
          <div class="form-group field">
            From Time : <%= f.select :from_time, options_for_select(Schedule::FROM_TIME) %>
          </div>
          <div class="form-group field">
            End Time : <%= f.select :end_time, options_for_select(Schedule::END_TIME) %>
          </div>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#schedule_date').datepicker({
        locale: 'pt-br',
        format: 'yyyy-mm-dd',
        sideBySide: true,
        daysOfWeekDisabled: [0,6]
    });
  });

</script>

